- content_for :javascript do
  = javascript_pack_tag 'topic'

.c-padding-10
  .c-container--sm
    h1.text--s-lg.text--b
      | トピックを投稿する
  .c-container
    #topic-form-vue
      .c-flex
        .c-grid__thumb.c-container--sm
          div v-if="!topic.image"
            = image_tag('no_image.png')
          template v-else=""
            img :src="topic.image"
        .c-form.c-margin-l-10
          .c-container--sm
            select class="c-form__select" v-model="topic.category_id"
              option v-for="category in categories" :value="category.id"
                = "{{category.name}}"
          .c-container--sm :class="isError('name')"
            input type="text" v-model="topic.name" class="c-form__input u-w-100p" placeholder="名前を入力してください"
      .c-form
        .c-container--sm :class="isError('title')"
          input type="text" v-model="topic.title" class="c-form__input u-w-100p" placeholder="タイトルを入力してください"
        .c-container--sm :class="isError('body')"
          textarea v-model="topic.body" class="c-form__text_area c-form--h-200 u-w-100p" placeholder="本文を入力してください"
          .c-flex.c-flex__jc-sb
            div
              input type="submit" class="c-btn c-btn--pink c-btn--md" data-disable-with="処理中..." @click="submit"
