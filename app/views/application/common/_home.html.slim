ul.c-tabs
  li.c-tab
    = link_to "質問", "#", class: "c-tab__link is-active", data: { tab: "question" }
  li.c-tab
    = link_to "回答", "#", class: "c-tab__link", data: { tab: "answer" }
  li.c-tab
    = link_to "共感", "#", class: "c-tab__link", data: { tab: "sympathy" }

.c-frame
  ul data-home-tab-contents="question"
    - threads.each do |thread|
      li.c-container.c-flex
        .c-frame.c-border.c-main-grid
          .c-grid__content.c-container--sm.c-border--bottom-1.c-border--dotted
            .c--label = thread.category.name
            .c-grid__title = link_to thread.title, thread
            .c-grid-lead = simple_format(thread.short_body)
          ul.c-tags.c-container--sm
            - thread.tags.each do |tag|
              li.c-tag
                i.fa.fa-tag.c-icon-pink
                span.c-tag--name = link_to tag.name, tag_path(tag)

    = paginate threads, params_name: "thread_page"

  ul data-home-tab-contents="answer" style="display: none;"
    - answers.each do |thread|
      li.c-container.c-flex
        .c-frame.c-border.c-main-grid
          .c-grid__content.c-container--sm.c-border--bottom-1.c-border--dotted
            .c--label = thread.category.name
            .c-grid__title = link_to thread.title, thread
            .c-grid-lead = simple_format(thread.short_body)
          ul.c-tags.c-container--sm
            - thread.tags.each do |tag|
              li.c-tag
                i.fa.fa-tag.c-icon-pink
                span.c-tag--name = link_to tag.name, tag_path(tag)

    = paginate answers, param_name: "answer_page"

  ul data-home-tab-contents="sympathy" style="display: none;"

- content_for :javascript do
  = javascript_include_tag "tabs"
